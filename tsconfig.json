{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@Constants/*": [
        "src/constants/*"
      ],
      "@Components": [
        "src/components"
      ],
      "@Components/*": [
        "src/components/*"
      ],
      "@Screens/*": [
        "src/screens/*"
      ],
      "@Modules/*": [
        "src/modules/*"
      ],
      "@Services/*": [
        "src/services/*"
      ],
      "@Utils/*": [
        "src/utils/*"
      ],
      "@Types/*": [
        "src/types/*"
      ],
      "@routes": [
        "src/routes"
      ],
      "@env": [".env"]
    }
  },
  "extends": "expo/tsconfig.base",
  "files": ["./App.tsx"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
